@model SinglePostViewModel
<h1 class="mt-4">@Model.Blogs.Title</h1>
<hr>
<p>Posted on @Model.Blogs.DateSubmitted</p>
<hr>
<p>@Model.Blogs.Text</p>
<hr>
<div class="card my-4">
    <h5 class="card-header">Leave a Comment:</h5>
    <div class="card-body">
        <form method="post" action="/home/addcomment">
            <input type="hidden" value="@Model.Blogs.Id" name="blogpostId" />
            <div class="form-group">
                <input id="commenterName" type="text" placeholder="Please enter your name" class="form-control" name="commenterName" value="@Model.Commenter" />
            </div>
            <div class="form-group">
                <textarea placeholder="Type your comment here but remember to be nice..." id="text" name="text" class="form-control" rows="3"></textarea>
            </div>
            <button disabled id="submit" name="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@foreach (Comments c in Model.Blogs.Comments)
{
    <div class="media mb-4">
        <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
        <div class="media-body">
            <h5 class="mt-0">
                @c.CommenterName
                <small>@c.DatePosted</small>
            </h5>
            @c.Text
        </div>
    </div>
}

